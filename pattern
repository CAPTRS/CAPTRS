//This is a code for the pattern
//Authors: Radhika and Shreya
#include <iostream>
using namespace std;
int main()
{
    int i,j,rows;
    cout<<"Enter the number of rows: ";
    cin>>rows;
    for(i=1;i<=rows;++i)
    {
        for(j=1;j<=i;++j)
        {
           cout<<"* ";
        }
        cout<<"\n";
        
    }
    cout<<"Cool Pattern!";
    return 0;
}
